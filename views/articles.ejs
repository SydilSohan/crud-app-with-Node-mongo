
<%- include("partials/header") -%>


<div class="container  pt-4 pb-4">
  <h1 id="timer" class="mb-6"></h1>
  <a href="/articles/new" class="btn btn-secondary"> New Article</a>

</div>



<% article.forEach(article => { %>

  <div class="container mt-4 border border-secondary p-4 post-container">
    <div class="container">
      <h3> <%= article.title %></h3>
    </div>
  <div class="container text-muted d-inline">
    <p class="d-inline"> <%= article.createdAt.toLocaleDateString('en-GB') %>      <%= article.author%></p>

  </div>
    <div class="container my-4">
      <p> <%= article.description %></p>
    </div>
    <div class="container">
      <p> <%= article.markdown %></p>
    </div>
<a href="/articles/<%= article.slug %>" class="btn btn-primary"> View Full</a>

  </div>


<% }); %>













<%- include("partials/footer") -%>
